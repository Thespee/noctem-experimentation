knitr::opts_chunk$set(warning = FALSE, message = FALSE, error = TRUE)
library(tidyverse)
theme_set(theme_bw()) # Remove the ggplot grey background, isn't it ugly?
set.seed(2025)
phi1 <- 0.1  # Example value, replace with your actual phi1
phi2 <- -0.2 # Example value, replace with your actual phi2
# Simulate AR(2) process
n <- 10000  # Number of observations
ar_sim <- arima.sim(model = list(ar = c(phi1, phi2)), n = n, sd = 1) #sigma^2 = 1
# Calculate sample ACF for the first 15 lags
sample_acf <- acf(ar_sim, lag.max = 15, plot = FALSE)$acf
acf_0 <- 1
acf_1 <- 1/7
acf_2 <- 3/14
theoretical_acf <- c(acf_0, acf_1, acf_2) # Add more as calculated
# Plot sample and theoretical ACFs
lag_values <- 0:15 # Lags from 0 to 15
plot(lag_values, sample_acf[1:16], type = "h",  # Sample ACF (histogram-like plot)
xlab = "Lag", ylab = "Autocorrelation",
main = "Sample and Theoretical ACF of AR(2) Process")
lines(lag_values[1:length(theoretical_acf)], theoretical_acf, col = "red", lwd = 2)  # Theoretical ACF (line)
legend("topright", legend = c("Sample ACF", "Theoretical ACF"), col = c("black", "red"), lwd = 2)
