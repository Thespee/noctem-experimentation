[Unit]
Description=Noctem Babysitting Timer
Documentation=https://github.com/noctem/noctem

[Timer]
# Run every 6 hours: 00:00, 06:00, 12:00, 18:00
OnCalendar=*-*-* 00,06,12,18:00:00
# Run missed timers on boot
Persistent=true
# Random delay up to 5 minutes to avoid thundering herd
RandomizedDelaySec=300

[Install]
WantedBy=timers.target
